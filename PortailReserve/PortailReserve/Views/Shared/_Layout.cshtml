<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <img src="~/Content/image/blason_six.png" alt="blason six" id="blasonSixLayout" />
        <img src="~/Content/image/couverture_uir_short.jpg" alt="bannière UIR" id="banniere" />
        <div id="iconeIdentite">
            <img src="~/Content/image/icone_soldat.png" alt="icone soldat" id="iconeSoldat"/>
            <div id="userGrade"> Caporal MAUCOTEL </div>
        </div>
    </header>

    <div id="menu">
        <div class="row">
            <div class="menuItem col-3 borderDroite"> @Html.ActionLink("ACCEUIL", "Index", "Home", new { @class = "lienMenu" }) </div>
            <div class="menuItem col-3 borderDroite"> EVENEMENT </div>
            <div class="menuItem col-3 borderDroite"> CONNAISSANCE </div>
            <div class="menuItem col-3"> SOUVENIR </div>
        </div>
    </div>

    <div id="corpsDePage" class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
