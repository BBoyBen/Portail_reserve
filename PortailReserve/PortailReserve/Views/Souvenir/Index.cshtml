@model PortailReserve.ViewModel.ListeAlbumsViewModel
@{
    ViewBag.Title = "Souvenirs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style {
    <link rel="stylesheet" href="~/Content/CSS/souvenir.css" />
}

@if (Model.NumCie != 0)
{
    <h1> Souvenir de la @Model.NumCie<span>e</span> Compagnie </h1>

    <div class="container">
        <div class="row">
            @if (ViewBag.Role < 4)
            {
                <div id="ajoutAlbum" class="col-3 champsTextDroit" style="display: block; ">
                    <button id="boutonAjoutAlbum" class="boutonOrange bouton" onclick="">
                        <span class="lienBouton lienBoutonBleu"> Ajouter un album </span>
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="container" id="listeAlbum">
        @if (Model.Count == 0)
        {
            <div class="row">
                <div class="col-12 text-center">
                    Votre compagnie n'a pas d'album.
                </div>
            </div>
        }
        else
        {

        }
    </div>
}
else
{

}

