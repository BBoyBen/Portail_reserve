@model PortailReserve.ViewModel.SuppressionSoaViewModel

<div class="row">
    <div class="col-12 text-center titrePopUp"> Suppression de @Model.Soa.Nom @Model.Soa.Prenom (CDS) </div>
</div>
<div class="row">
    <div class="col-12 text-center"> Voulez vraiment supprimer le @Model.Soa.Grade @Model.Soa.Nom, chef de section, de votre section ? </div>
</div>
<div class="row corpsPopUp">
    <div class="col-12"> (La personne ne sera plus dans votre section, vous pourrez tout de même la rajouter plus tard, si il n'est affecté à aucune autre section.)</div>
</div>
<div class="row">
    <div class="col-6">
        <div class="row">
            <button id="boutonSuppression" class="col-8 bouton boutonVert champsTextDroit text-center" onclick="clickOn('lienSuppCds'); ">
                Supprimer
            </button>
            <div id="lienSuppressionCds" style="display: none; ">
                @using (Ajax.BeginForm("SupprimerCds", "Section", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "partieSection",
                    HttpMethod = "POST",
                    OnBegin = "afficherCacherPopUp('popUpSuppressionCds')",
                    OnComplete = "modifierSection()",
                    OnSuccess = "messageSuccess('Suppression CDS OK !')",
                    OnFailure = "messageError('Erreur suppression CDS !')"
                }))
                {
                    @Html.Hidden("idAncienCds", Model.Soa.Id)
                    @Html.Hidden("idSection", Model.Section.Id)

                    <input type="submit" value="Supprimer" id="lienSuppCds" />
                }
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="row">
            <button class="col-8 bouton boutonRouge text-center" onclick="afficherCacherPopUp('popUpSuppressionCds'); ">
                Annuler
            </button>
        </div>
    </div>
</div>

<div class="row ligne-ou">
    <div class="col-12 text-center font-weight-bold">
        OU
    </div>
</div>

<div class="row">
    <div class="col-6 selfCenter">
        <button class="bouton boutonRouge allWidth text-center" onclick="clickOn('lienSuppCdsDef');">
            Supprimer définitivement
        </button>
    </div>
    <div style="display: none;">
        @using (Ajax.BeginForm("SupprimerDefinitivement", "Section", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "partieSection",
            HttpMethod = "POST",
            OnBegin = "afficherCacherPopUp('popUpSuppressionCds')",
            OnComplete = "modifierSection()",
            OnSuccess = "messageSuccess('Suppression définitive OK !')",
            OnFailure = "messageError('Erreur suppression définitive !')"
        }))
        {
            @Html.Hidden("idPerso", Model.Soa.Id)
            @Html.Hidden("idSection", Model.Section.Id)
            @Html.Hidden("typePerso", 3)

            <input type="submit" value="Supprimer définitivement" id="lienSuppCdsDef" />
        }
    </div>
</div>

