@model PortailReserve.Models.Utilisateur
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/CSS/login.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="homePage">
        <div id="partGauche" class="col-6 partie"> 
            <h1 id="titreGauche"> Réserve du 92e Régiment d'infanterie </h1>
            <div class="row">
                <div class="col-12">
                    <img src="~/Content/image/blason_ri.png" alt="blason 92e RI" class="blasonRI"/>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <img src="~/Content/image/blason_six.png" alt="blason 6e Cie" class="blasonSix" />
                </div>
            </div>
        </div>

        <div id="partDroite" class="col-6 partie">
            <h1 id="titreDroit"> Veuillez vous authentifier </h1>
            <div id="formAuth">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        @Html.LabelFor(m => m.Matricule, null, new { @class = "col-12"})
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(m => m.Matricule, null, new { @class = "col-6 champsText"})
                    </div>
                    <div class="row erreur">
                        @Html.ValidationMessageFor(m => m.Matricule)
                    </div>

                    <div class="row">
                        @Html.LabelFor(m => m.MotDePasse, null, new { @class = "col-12"})
                    </div>
                    <div class="row">
                        @Html.TextBoxFor(m => m.MotDePasse, new { type = "password", @class = "col-6 champsText" })
                    </div>
                    <div class="row erreur">
                        @Html.ValidationMessageFor(m => m.MotDePasse)
                    </div>

                    <div class="row">
                        <input type="submit" value="Valider" class="col-4 btnSubmit" />
                    </div>
                }
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

